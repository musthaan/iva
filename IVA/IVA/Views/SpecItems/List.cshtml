@model IEnumerable<IVA.Models.tbl_Spec_items>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    List</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { tid = ViewBag.SpecID })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
    
        <tr   class=' @(item.IsActive ? "success" : "danger")'>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
               
                 <div class="btn-group btn-group-xs pull-right">
                @Html.ActionLink("Edit", "Edit", new { tid = item.ID }, new { @class="btn btn-default" }) 
                @Html.ActionLink("Details", "Details", new { tid = item.ID }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Delete", "Delete", new { tid = item.ID }, new { @class = "btn btn-default" })
                   </div>
            </td>
        </tr>
    }
</table>
