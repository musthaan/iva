						</li>
					</ul>
				</li>

			</ul>
		</div>
            <div class="panel-group" id="accordion">

                 @foreach (var Spec in (new IVA.Models.IVADBEntities()).tbl_Specs)
                 {  
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@Spec.ID">
        <span class="glyphicon glyphicon-camera"></span>&nbsp;@Spec.Name  
        </a>
      </h4>
    </div>
    <div id="collapse-@Spec.ID" class="panel-collapse collapse in">
      <div class="panel-body">
        @foreach (var Specitem in Spec.tbl_Spec_items)
                        { <a href="#" class="">
                            <label>
                           <input type="checkbox" class="filter-check" data-specid="@Specitem.ID" />  <span class="glyphicon glyphicon-file"></span>&nbsp;@Specitem.Name</label>
                         </a>
                        }
      </div>
    </div>
  </div>
                 }
</div> 
	</div>
	<div class="col-md-9 col-sm-9 col-lg-9" style="	padding-right: 0px;	">
		<div class="row">
			<div id="productSlider" class="carousel slide">
				<!-- Carousel items -->
				<div class="carousel-inner">
					<div class="item active"><img src="images/slider1.png" alt=""></div>
					<div class="item"><img src="images/slider2.png" alt=""></div>
					<div class="item"><img src="images/slider3.png" alt=""></div>
				</div>

				<!-- Carousel nav -->
				<a class="carousel-control left" href="#productSlider" data-slide="prev">‹</a>
				<a class="carousel-control right" href="#productSlider" data-slide="next">›</a>
			</div>
		</div>
		<div class="row">
			<div class="productFilter clearfix">

				<div class="sortBy inline pull-left">
					Sort By
					<div class="btn-group">
						<button type="button" class="btn  btn-default">Default</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
							<span class="caret"></span>

						</button>
						<ul class="dropdown-menu" role="menu">
							<li><a href="#">Name (A-A)</a></li>
							<li><a href="#">Name (Z-A)</a></li>
							<li><a href="#">Price (Low-Hight)</a></li>
							<li><a href="#">Price (Height-Low)</a></li>
							<li><a href="#">Highest Rating</a></li>
							<li><a href="#">Lowest Rating</a></li>
							<li><a href="#">Model (A-Z)</a></li>
							<li><a href="#">Model (Z-A)</a></li>
						</ul>
					</div>


				</div>

				<div class="showItem inline pull-left">
					Show
					<div class="btn-group">
						<button type="button" class="btn  btn-default">Default</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
							<span class="caret"></span>

						</button>
						<ul class="dropdown-menu" role="menu">
							<li><a href="#">Name (A-A)</a></li>
							<li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i> 15</a></li>
							<li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i> 25</a></li>
							<li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i> 50</a></li>
							<li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i> 75</a></li>
							<li><a href="#"><i class="glyphicon glyphicon-chevron-right"></i> 100</a></li>
						</ul>
					</div>

				</div><!--end sortBy-->



				<div class="displaytBy inline pull-right">
					Display
					<div class="btn-group">
						<button class="btn btn-primary active"><i class="glyphicon glyphicon-list"></i></button>
						<button class="btn"><i class="glyphicon glyphicon-th-large"></i></button>
					</div>
				</div><!--end displaytBy-->

			</div>
		</div>
		<div class="row">
			<ul class="hProductItems clearfix">

                 @foreach (var item in (new IVA.Models.IVADBEntities()).tbl_Products)
                 {


                     var productItems = item.tbl_Product_Images.Where(pi => pi.IsDefault == true);
                     ViewBag.src = "";
                     if (productItems != null)
                     {
                         var productImage = productItems.FirstOrDefault();
                         if (null != productImage)
                         {
                             ViewBag.src = productImage.ImagePath;
                         }
                     }
				<li class="col-xs-6 col-md-3 clearfix">

					<a href="#" class="thumbnail">
						<img src="@ViewBag.src" alt="">
					</a>

					<div class="thumbSetting">
						<div class="thumbTitle">
						 
								 @Html.ActionLink(item.Name, "Details", "products", item.ID, new { @class = "invarseColor" })
							 
						</div>
						<div class="thumbPrice">
							<span> @item.OurRate.ToString("0.00")</span>
						</div>

						<div class="thumbButtons">
							<button class="btn btn-primary btn-xs" data-title="+To Cart" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
								<i class="glyphicon glyphicon-shopping-cart"></i>
							</button>
							<button class="btn btn-xs" data-title="+To WishList" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
								<i class="glyphicon glyphicon-heart"></i>
							</button>

							<button class="btn btn-xs" data-title="+To Compare" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
								<i class="glyphicon glyphicon-refresh"></i>
							</button>
						</div><ul class="rating">
											<li><i class="star-on"></i></li>
											<li><i class="star-on"></i></li>
											<li><i class="star-off"></i></li>
											<li><i class="star-off"></i></li>
											<li><i class="star-off"></i></li>
										</ul>
					</div>
				</li>
                 }

</ul>
